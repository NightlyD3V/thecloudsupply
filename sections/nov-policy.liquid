<div class="container">
  <div class="distance" style="padding-top: {{ section.settings.distance_top }}; padding-bottom: {{ section.settings.distance_bottom }}">
    <div id="section-policy-{{ section.id }}" class="page-width{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}" data-section-id="{{ section.id }}">
        {% if section.settings.has_fullwidth == false %}
          <div class="container">
        {% endif %}
        {% if section.settings.title != blank %}
          <div class="section-header text-center">
            <div class="sub-title">{{ section.settings.sub_title }}</div>
            <h2>{{ section.settings.title | escape }}</h2>
          </div>
       {% endif %}
  
        {% if section.blocks.size > 0 %}
          <div class="nov-policy">
            <div class="align-items row spacing-15">
              {% for block in section.blocks %}
                {% if section.settings.view_type == 'type_1' %}
                  <div class="{{ section.settings.width }} {{ section.settings.width_tablet }} {{ section.settings.width_mobile }} {{ section.settings.style }}">
                    <div class="nov-policy-item layout1">
                      <div class="block_content">
                        <div class="policy-icon">
                          <img src="{{ block.settings.policy_icon | img_url: '72x' }}" alt="">
                        </div>
                        <div class="policy-info">
                          <div class="title-policy text-uppercase">{{ block.settings.title_policy }}</div>
                          <div class="desc-policy">{{ block.settings.desc_policy }}</div>
                        </div>
                      </div>
                    </div>
                  </div>
                {% else %}
                  <div class="{{ section.settings.width }} {{ section.settings.width_tablet }} {{ section.settings.width_mobile }} {{ section.settings.style }}">
                    <div class="nov-policy-item layout2">
                      <div class="block_content d-xl-flex align-items-center">
                        <div class="policy-icon mr-25 mr-lg-0 mb-lg-10">
                          <img src="{{ block.settings.policy_icon | img_url: '72x' }}" alt="">
                        </div>
                        <div class="policy-info media-body">
                          <div class="title-policy">{{ block.settings.title_policy }}</div>
                          <div class="desc-policy">{{ block.settings.desc_policy }}</div>
                        </div>
                      </div>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endif %}
  
        {% if section.settings.has_fullwidth == false %}
          </div>
        {% endif %}
    </div>
  </div>
</div>
