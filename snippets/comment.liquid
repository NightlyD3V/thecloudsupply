<!-- /snippets/comment.liquid -->
<div class="media">
  <img src="{{ 'user-anonymous.png' | asset_img_url: '70x' }}" class="img-fluid d-flex mr-20" alt="user anonymous" />
  <div class="media-body">
    <h5 class="mt-0 d-flex align-items-center">
        <span class="comment__meta-item mr-auto text-uppercase">{{ comment.author }}</span>
        <span class="comment__meta-item date text-uppercase">{{ comment.created_at | time_tag: format: 'month_day_year' }}</span>
    </h5>
    <div class="comment__content">{{ comment.content }}</div>
  </div>
</div>