<div class="page-width nov-feature-blog">

  {% if section.settings.has_fullwidth == false %}
  <div class="container">
  {% endif %}
  <div class="block">
    {% if section.settings.title != blank %}
     <h2 class="title_block">
        {% if section.settings.subheading != blank %}
          <span class="sub_title">{{ section.settings.subheading | escape }}</span>
        {% endif %}
        <span>{{ section.settings.title | escape }}</span>
      </h2>
    {% endif %}

    {%- assign blog = blogs[section.settings.blog] -%}

    {% case section.settings.grid_number %}
    {% when '2' %}
      {%- assign grid_item_width = 'col-lg-6 col-md-6' -%}
    {% when '3' %}
      {%- assign grid_item_width = 'col-lg-4 col-md-4' -%}
    {% when '4' %}
      {%- assign grid_item_width = 'col-lg-3 col-md-3' -%}
    {% when '5' %}
      {%- assign grid_item_width = 'col-lg-cus-5 col-md-cus-5' -%}
    {% when '6' %}
      {%- assign grid_item_width = 'col-lg-2 col-md-2' -%}
    {% endcase %}

    {% unless blog.articles_count == 0 %}
      <div class="row grid--view-items">
        {% for article in blog.articles limit: section.settings.post_limit %}
          <div class="{{ grid_item_width }}">
            {% if article.image and section.settings.blog_show_image %}
              {% capture img_id %}ArticleImage-{{ article.image.id }}{% endcapture %}
              {% capture img_wrapper_id %}ArticleImageWrapper-{{ article.image.id }}{% endcapture %}
              <div id="{{ img_wrapper_id }}" class="article__grid-image-wrapper js">
                <a href="{{ article.url }}" class="article__grid-image-container">
                  <img class="article__list-image lazyload img-fluid" src="{{ article.image | img_url: '270x' }}" alt="{{ article.image.alt | escape }}">
                </a>
              </div>
            {% endif %}

            <div class="article__grid-meta{% if article.image %} article__grid-meta--has-image{% endif %}">
              <h2 class="h3 article__title">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h2>

              {% if section.settings.blog_show_author %}
                <span class="article__author">{{ 'blogs.article.by_author' | t: author: article.author }}</span>
              {% endif %}

              {% if section.settings.blog_show_date %}
                <span class="article__date">
                  <i class="zmdi zmdi-calendar-note"></i>
                  {{ article.published_at | time_tag: format: 'month_day_year' }}
                </span>
              {% endif %}

              <div class="rte article__grid-excerpt">
                {% if article.excerpt.size > 0 %}
                  {{ article.excerpt }}
                {% else %}
                  {{ article.content | strip_html | truncate: 150 }}
                {% endif %}
              </div>

              {% if article.tags.size > 0 %}
                <div class="article__tags rte">
                  {% for tag in article.tags %}
                    <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag">{{ tag }}</a>
                  {% endfor %}
                </div>
              {% endif %}

              <ul class="list--inline article__meta-buttons">
                <li>
                  <a href="{{ article.url }}" class="btn btn--secondary btn--small">
                    {{ 'blogs.article.view_more' | t }}
                  </a>
                </li>

                {% if blog.comments_enabled? and article.comments_count > 0 %}
                  <li>
                    <a href="{{ article.url }}#comments" class="btn btn--small btn--link">
                      {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                    </a>
                  </li>
                {% endif %}
              </ul>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="row grid--view-items">
        {% for i in (1..section.settings.post_limit) %}
          <div class="grid__item medium-up--one-third">
            <div class="article__grid-meta">
              <h2 class="h3 article__title">
                <a href="#">{{ 'homepage.onboarding.blog_title' | t }}</a>
              </h2>

              {% if section.settings.blog_show_author %}
                <span class="article__author">{{ 'homepage.onboarding.blog_author' | t }}</span>
              {% endif %}

              <div class="rte article__grid-excerpt">
                {{ 'homepage.onboarding.blog_excerpt' | t }}
              </div>

              <ul class="list--inline article__meta-buttons">
                <li>
                  <a href="{{ article.url }}" class="btn btn--secondary btn--small">
                    {{ 'blogs.article.view_more' | t }}
                  </a>
                </li>
              </ul>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endunless %}

  </div>

  {% if section.settings.has_fullwidth == false %}
  </div>
  {% endif %}

</div>

{% schema %}
  {
    "name": "Vinova Blog posts",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Vinova Blog posts"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading",
        "default": "Subtitle from happy customers"
      },
      {
        "id": "blog",
        "type": "blog",
        "label": "Blog"
      },
      {
        "type": "select",
        "id": "grid_number",
        "label": "Post per row",
        "default": "4",
        "options": [
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          },
          {
            "value": "6",
            "label": "6"
          }
        ]
      },
      {
        "type": "select",
        "id": "row_number",
        "label": "Number row",
        "default": "1",
        "options": [
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          }
        ]
      },
      {
        "type": "range",
        "id": "post_limit",
        "label": "Limit Posts",
        "min": 6,
        "max": 24,
        "step": 1,
        "default": 6
      },
      {
        "type": "checkbox",
        "id": "blog_show_image",
        "label": "Show image post",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "blog_show_author",
        "label": "Show author",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "blog_show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full Width",
        "default": false
      }
    ],
    "presets": [
      {
        "name": "Vinova Blog posts",
        "category": "Blog",
        "settings": {
          "blog": "News",
          "post_limit": 6
        }
      }
    ]
  }
{% endschema %}
