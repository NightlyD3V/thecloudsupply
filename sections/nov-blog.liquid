<div class="distance" style="padding-top: {{ section.settings.distance_top }}; padding-bottom: {{ section.settings.distance_bottom }}">
  <div data-section-id={{ section.id }} data-section-type="nov-slick" class="nov-blog{% if section.settings.class != blank %}{{ section.settings.class }}{% endif %}{% if section.settings.type_option == '1' %} type_1{% else %} type_2{% endif %}">
    <div class="page-width">
      <div class="block">
      {% if section.settings.has_fullwidth == false %}
      <div class="container"> 
      {% endif %}
        {% if section.settings.title != blank %}
         <div class="title_block {{ section.settings.title_alignment }}">
          {% if section.settings.type_heading == '1' %}
            {% if section.settings.subheading != blank %}
              <span class="sub_title{% if section.settings.inline == true %} d-inline{% endif %}">{{ section.settings.subheading | nofilter }}</span>
            {% endif %}
            <span>{{ section.settings.title | nofilter }}</span>
          {% else %}
            <span>{{ section.settings.title | nofilter }}</span>
            {% if section.settings.subheading != blank %}
              <span class="sub_title{% if section.settings.inline == true %} d-inline{% endif %}">{{ section.settings.subheading | nofilter }}</span>
            {% endif %}
          {% endif %}
          </div>
        {% endif %}

        {%- assign collection_blog = blogs[section.settings.blog] -%}
  
        {% case section.settings.grid_number %}
        {% when '2' %}
          {%- assign img_size = settings.img_size_large -%}
        {% when '3' %}
          {%- assign img_size = settings.img_size_large -%}
        {% when '4' %}
          {%- assign img_size = settings.img_size -%}
        {% when '5' %}
          {%- assign img_size = settings.img_size -%}
        {% when '6' %}
          {%- assign img_size = settings.img_size -%}
        {% endcase %}

        {%- assign blog_limit = section.settings.limit -%}

        <div class="row grid grid--view-items nov-slick-carousel" data-autoplay="false" data-autoplayTimeout="6000" data-loop="false" data-margin="{{ section.settings.spacing }}" data-dots="{{ section.settings.show_dots }}" data-nav="{{ section.settings.show_nav }}" data-row="{{ section.settings.number_row }}" data-items="{{ section.settings.grid_number }}" data-items_tablet="{{ section.settings.items_tablet }}" data-items_mobile="{{ section.settings.items_mobile }}">
          {% for article in collection_blog.articles limit: blog_limit %}
            <div class="item">
              {% if section.settings.type_option == '1' %}
                <div class="article--listing text-xmd-center">
              {% else %}
                <div class="article--listing">
              {% endif %}
                {% if section.settings.show_image == true %}
                  {% if article.image %}
                    <a href="{{ article.url }}" class="article__list-image-container">
                      {% if section.settings.type_option == '1' %}
                        <img class="article__list-image lazyload"
                        src="{{ article.image | img_url: '370x' }}"
                        alt="{{ article.image.alt | escape }}">
                      {% else %}
                        <img class="article__list-image lazyload"
                        src="{{ article.image | img_url: '370x' }}"
                        alt="{{ article.image.alt | escape }}">
                      {% endif %}
                    </a>
                  {% endif %}
                {% endif %}
                {% if section.settings.type_option == '1' %}
                  <div class="media-body ml-lg-0 mt-lg-25">
                {% else %}
                  <div class="media-body mb-10">
                {% endif %}
                <h2 class="article__title"><a href="{{ article.url }}">{{ article.title }}</a></h2>
                <div class="article__info">
                  {% if blog.comments_enabled? %}
                    <span class="article__countcomment text-uppercase">
                      <i class="zmdi zmdi-comments"></i>{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                    </span>
                  {% endif %}
                  <span class="article__date">
                    <i class="zmdi zmdi-calendar-note"></i>{{ article.published_at | time_tag: format: 'month_day_year' }}
                  </span>
                </div>
                <div class="article__excerpt">
                  {% if section.settings.type_option == '1' %}
                    {% if article.excerpt.size > 0 %}
                      {{ article.excerpt | truncate: 150 }}
                    {% else %}
                      {{ article.content | strip_html | truncate:150 }}
                    {% endif %}
                  {% else %}
                    {% if article.excerpt.size > 0 %}
                      {{ article.excerpt | truncate: 150 }}
                    {% else %}
                      {{ article.content | strip_html | truncate:150 }}
                    {% endif %}
                  {% endif %}
                </div>
                {% if section.settings.enable_viewmore == true %}
                  <a href="{{ article.url }}" class="article__readmore">{{ 'blogs.article.readmore' | t }}</a>
                {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        {% if section.settings.show_view_all %}
          <hr class="hr--invisible"></hr>
          <div class="text-center">
            <a href="{{ blogs.url }}" class="btn">
              {{ 'collections.general.view_all' | t }}
            </a>
          </div>
        {% endif %}

      {% if section.settings.has_fullwidth == false %}
      </div>
      {% endif %}
      </div>
    </div>
  </div>
</div>
