{% comment %}
  The contents of the collection.liquid template can be found in /sections/collection-template.liquid
{% endcomment %}

{% include 'nov-breadcrumb' %}

<div class="page-width">
    <div class="container">
        <div class="row">
          {% if settings.type_sidebar != 'sidebar_hidden' %}
            <div class="sidebar sidebar-collection col-lg-3 col-md-3 flex-xs-unordered{% if settings.type_sidebar == 'sidebar_right' %} flex-last{% endif %}">
            {% section 'nov-sidebar' %}
            </div>
          {% endif %}
          <div class="{% if settings.type_sidebar != 'sidebar_hidden' %}col-lg-9 col-md-9 flex-xs-first{% else %}col-lg-12 col-md-12{% endif %}">
            {% section 'collection-template' %}
          </div>
        </div>
    </div>
</div>