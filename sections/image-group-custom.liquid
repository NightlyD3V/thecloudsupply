<div class="distance" style="padding-top: {{ section.settings.distance_top }}; padding-bottom: {{ section.settings.distance_bottom }}">
  <div class="gallery-image-custom">
    {% if section.settings.has_fullwidth == false %}
      <div class="container">
    {% endif %}

    {% if section.settings.title != blank %}
      <div class="block">
        <div class="title_block {{ section.settings.title_alignment }}">
          {% if section.settings.subheading != blank %}
            <span class="sub_title{% if section.settings.inline == true %} d-inline{% endif %}">{{ section.settings.subheading | escape }}</span>
          {% endif %}
          <span>{{ section.settings.title | nofilter }}</span>
        </div>
      </div>
    {% endif %}

    <div class="row spacing-{{ section.settings.spacing }}{% if section.settings.has_fullwidth == true %} m-0{% endif %}">
      {% for block in section.blocks %}
        <div class="{{ block.settings.width_group_image }} {{ block.settings.width_group_image_tablet }} {{ block.settings.class_group_image }}">
          <div class="row spacing-{{ section.settings.spacing }}">
            {% if block.settings.image_1 != blank %}
              <div class="{{ block.settings.width_image_1 }} {{ block.settings.width_image_1_tablet }} {{ block.settings.class_1 }}">
                <div class="gallery-image__item">
                  {% if block.settings.link_1 != blank %}
                    <a href="{{ block.settings.link_1 }}">
                  {% endif %}
                    <img class="img-fluid" src="{{ block.settings.image_1 | img_url: '1920x' }}" alt="">
                  {% if block.settings.link_1 != blank %}
                    </a>
                  {% endif %}
                  {% if block.settings.heading_1 != blank %}
                    <div class="group_des">
                      <div class="content-des">
                        <div class="heading">{{ block.settings.heading_1 }}</div>
                        {% if block.settings.sub_heading_1 != blank %}
                          <div class="sub_heading">{{ block.settings.sub_heading_1 }}</div>
                        {% endif %}
                        {% if block.settings.link_1 != blank %}
                          <a class="mt-35" href="{{ block.settings.link_1 }}">{{ 'sections.gallery_image_custom.btn' | t }}</a>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
            {% if block.settings.image_2 != blank %}
              <div class="{{ block.settings.width_image_2 }} {{ block.settings.width_image_2_tablet }} {{ block.settings.class_2 }}">
                <div class="gallery-image__item">
                  {% if block.settings.link_2 != blank %}
                    <a href="{{ block.settings.link_2 }}">
                  {% endif %}
                    <img class="img-fluid" src="{{ block.settings.image_2 | img_url: '1920x' }}" alt="">
                  {% if block.settings.link_2 != blank %}
                    </a>
                  {% endif %}
                  {% if block.settings.heading_2 != blank %}
                    <div class="group_des">
                      <div class="content-des">
                        <div class="heading">{{ block.settings.heading_2 }}</div>
                        {% if block.settings.sub_heading_2 != blank %}
                          <div class="sub_heading">{{ block.settings.sub_heading_2 }}</div>
                        {% endif %}
                        {% if block.settings.link_2 != blank %}
                          <a class="mt-35" href="{{ block.settings.link_2 }}">{{ 'sections.gallery_image_custom.btn' | t }}</a>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
            {% if block.settings.image_3 != blank %}
              <div class="{{ block.settings.width_image_3 }} {{ block.settings.width_image_3_tablet }} {{ block.settings.class_3 }}">
                <div class="gallery-image__item">
                  {% if block.settings.link_3 != blank %}
                    <a href="{{ block.settings.link_3 }}">
                  {% endif %}
                    <img class="img-fluid" src="{{ block.settings.image_3 | img_url: '1920x' }}" alt="">
                  {% if block.settings.link_3 != blank %}
