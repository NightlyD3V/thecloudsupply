<div class="distance" style="padding-top: {{ section.settings.distance_top }}; padding-bottom: {{ section.settings.distance_bottom }}">
  <div class="gallery-image text-center">
    {% if section.settings.has_fullwidth == false %}
    <div class="container">
    {% endif %}
    <div class="row spacing-{{ section.settings.spacing }}">
    {% case section.blocks.size %}
      {% when 1 %}
        {%- assign column_size = 'col-lg-12 col-md-12 col-sm-12' -%}
      {% when 2 %}
        {%- assign column_size = 'col-lg-6 col-md-6 col-sm-12' -%}
      {% when 3 %}
        {%- assign column_size = 'col-lg-4 col-md-4 col-sm-12' -%}
      {% when 4 %}
        {%- assign column_size = 'col-lg-3 col-md-3 col-sm-12' -%}
      {% else %}
        {%- assign column_size = 'col-lg-cus-5 col-md-cus-12' -%}
    {% endcase %}

    {% for block in section.blocks %}
      <div class="{{ column_size }} gallery-image_column" {{ block.shopify_attributes }}>
        <div class="gallery-image__item lazyload">
          {% if block.settings.link != blank %}
          <a class="gallery-image__link" href="{{ block.settings.link }}">
          {% endif %}
            {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '1920x1920' }}" alt="{% if block.settings.cta_label != blank %}{{ block.settings.cta_label }}{% else %}gallery image{% endif %}">
            {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          {% if block.settings.link != blank %}
          </a>
          {% endif %}
          <div class="gallery-image__caption">
            {% if block.settings.cta_label != blank %}
            <div class="gallery-image__text">
              {{ block.settings.cta_label | escape }}
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
    </div><!-- End row -->
    {% if section.settings.has_fullwidth == false %}
    </div><!-- End container -->
    {% endif %}
  </div>
</div>
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

{% schema %}
  {
    "name": "Vinova Gallery Image",
    "class": "index-section section-gallery-image",
    "max_blocks": 5,
    "settings": [
      {
        "type": "select",
        "id": "spacing",
        "label": "Spacing Items",
        "default": "10",
        "options": [
          {
            "label": "0px",
            "value": "0"
          },
          {
            "label": "5px",
            "value": "5"
          },
          {
            "label": "10px",
            "value": "10"
          },
          {
            "label": "15px",
            "value": "15"
          },
          {
            "label": "20px",
            "value": "20"
          },
          {
            "label": "25px",
            "value": "25"
          },
          {
            "label": "30px",
            "value": "30"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full Width",
        "default":   false
      },
      {
        "type": "text",
        "id": "distance_top",
        "label": "Top Distance Section",
        "default": "30px"
      },
      {
        "type": "text",
        "id": "distance_bottom",
        "label": "Bottom Distance Section",
        "default": "30px"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "alignment",
            "label": "Image alignment",
            "default": "center",
            "options": [
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "center",
                "label": "Middle"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              }
            ]
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "Caption"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Gallery Images",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}
